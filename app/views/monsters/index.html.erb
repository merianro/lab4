<h1>Monster List</h1>
<%= link_to "Create", new_monster_path, class: "btn btn-outline-primary" %>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th class="primary-row-text">Name</th>
            <th class="primary-row-text">Description</th>
        </tr>
        
        <tr>
            <% @monsters.each do |monster| %>
            <td>  <%= link_to  monster.name, monster %></td>
            <td>  
                <p class="twStar">
                    <% if monster.tweets.count > 1  %>
                        * Twittero Destacado *
                    <% end %>                
                </p>
                <p><%=  monster.description %></p>
            </td>
        </tr>
        <% end %>
    </table>
</div>
